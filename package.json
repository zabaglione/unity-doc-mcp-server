{
  "name": "unity-doc-mcp-server",
  "version": "0.1.0",
  "description": "Unity Documentation MCP Server - Provides Unity 6 documentation via Model Context Protocol with full-text search and offline support",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "download-docs": "tsx src/scripts/download-docs.ts",
    "init-db": "tsx src/scripts/init-db.ts",
    "index-docs": "tsx src/scripts/index-docs.ts",
    "setup": "npm run init-db && npm run index-docs",
    "clean": "rimraf dist data/extracted data/*.db"
  },
  "keywords": [
    "unity",
    "unity6",
    "documentation",
    "mcp",
    "model-context-protocol",
    "claude",
    "ai",
    "search",
    "sqlite",
    "fts5"
  ],
  "author": "zabaglione",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zabaglione/unity-doc-mcp-server.git"
  },
  "homepage": "https://github.com/zabaglione/unity-doc-mcp-server#readme",
  "bugs": {
    "url": "https://github.com/zabaglione/unity-doc-mcp-server/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "better-sqlite3": "^9.2.2",
    "cheerio": "^1.0.0-rc.12",
    "node-fetch": "^3.3.2",
    "unzipper": "^0.10.14",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.5",
    "@types/unzipper": "^0.10.11",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitest/coverage-v8": "^1.1.0",
    "archiver": "^6.0.1",
    "eslint": "^8.56.0",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
